# ─────────────────────────────────────────────────────────────
#  go_infra_link — Environment Configuration
#  Copy this file:  cp .env.example .env
#  Then adjust values below to your needs.
# ─────────────────────────────────────────────────────────────

# ── General ──────────────────────────────────────────────────
APP_ENV=development            # development | production
APP_LOG_LEVEL=debug            # debug | info | warn | error

# ── Backend Server ───────────────────────────────────────────
BACKEND_PORT=8080              # port the backend listens on (host + container)

# ── Frontend ─────────────────────────────────────────────────
FRONTEND_PORT=5173             # host port for the SvelteKit dev server

# ── Database (Postgres via Docker) ───────────────────────────
DB_DRIVER=postgres             # sqlite | postgres | mysql
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=go_infra_link
POSTGRES_PORT=5432             # host port for Postgres
DATABASE_URL=host=postgres user=postgres password=postgres dbname=go_infra_link port=5432 sslmode=disable

# ── Database Tuning ──────────────────────────────────────────
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=1h
DB_CONNECT_TIMEOUT=5s

# ── Auth / JWT ───────────────────────────────────────────────
JWT_SECRET=super-long-secret-change-me-in-production
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=720h

# ── Cookies ──────────────────────────────────────────────────
COOKIE_SECURE=false            # true in production (HTTPS)
COOKIE_DOMAIN=                 # e.g. .example.com

# ── Seed User (auto-created on startup in dev) ───────────────
SEED_USER_ENABLED=true
SEED_USER_FIRST_NAME=Besart
SEED_USER_LAST_NAME=Morina
SEED_USER_EMAIL=besart_morina@hotmail.com
SEED_USER_PASSWORD=password

# ── Dev Auth (bypass login, dev only) ────────────────────────
DEV_AUTH_ENABLED=false
DEV_AUTH_EMAIL=
DEV_AUTH_PASSWORD=
