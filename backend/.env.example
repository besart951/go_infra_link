# Database Configuration
# DB_TYPE can be: sqlite, postgres, mysql, or mariadb
DB_TYPE=sqlite
DB_DSN=./data/app.db

# For PostgreSQL:
# DB_TYPE=postgres
# DB_DSN=host=localhost port=5432 user=postgres password=postgres dbname=go_infra_link sslmode=disable

# For MySQL/MariaDB:
# DB_TYPE=mysql
# DB_DSN=user:password@tcp(localhost:3306)/go_infra_link?charset=utf8mb4&parseTime=True&loc=Local

# Application
APP_ENV=development
HTTP_ADDR=:8080
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=change-me-in-production
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=720h

# Seed User (Development only)
SEED_USER_ENABLED=true
SEED_USER_EMAIL=admin@example.com
SEED_USER_PASSWORD=password
SEED_USER_FIRST_NAME=Admin
SEED_USER_LAST_NAME=User
