{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ESNext",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        
        "verbatimModuleSyntax": true, 
        "isolatedModules": true,
        "rewriteRelativeImportExtensions": true
    }
}